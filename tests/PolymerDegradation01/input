# name:		PolymerDegradation01
# author:	Vinamra Agrawal
# date:		2018 May 28
#
# description:	Simulation polymer degradation due to water diffusion
#		In this example the 3rd dimension (if used) is periodic so
#		the simulation is still 2D.
#		The boundary conditions are:
#			- Dirichlet in X and Y
#			o  mu=1 at x=0, y=0
#			o  mu=1 at x=1, y=1
#			- Periodic in Z
#		The initial condition is a constant with zero water
#		concentration and no damage
#
# usage:	[alamo]$> bin/degradation tests/PolymerDegradation01/input
#
# output:	tests/PolymerDegradation01/output2
#
#===========================================================================

alamo.program = degradation

#=============== Simulation length =========================================
timestep = 0.01
stop_time = 150
#===========================================================================

#=============== AMR parameters ============================================
amr.plot_int = 10
amr.max_level = 0
amr.n_cell = 128 64 16
amr.max_grid_size = 8
amr.blocking_factor = 4
amr.regrid_int = 10
amr.grid_eff = 1.0
amr.plot_file = output
#===========================================================================

#=============== Specify geometry and unrefined mesh =======================
geometry.prob_lo = 0 0 0
geometry.prob_hi = 25.5 12.7 3.25
geometry.is_periodic= 0 0 0
#===========================================================================

#=============== Water diffusion parameters ================================
water.on = true
water.diffusivity = 0.015
water.refinement_threshold = 0.01

water.ic_type = constant
water.ic.value = 0.0
water.bc.lo = EXT_DIR EXT_DIR EXT_DIR
water.bc.hi = EXT_DIR EXT_DIR EXT_DIR
water.bc.lo_1 = 1.0
water.bc.hi_1 = 1.0
water.bc.lo_2 = 1.0
water.bc.hi_2 = 1.0
water.bc.lo_3 = 1.0
water.bc.hi_3 = 1.0
#===========================================================================

#=============== Heat diffusion parameters =================================
thermal.on = false
thermal.diffusivity = 0.01
thermal.refinement_threshold = 0.01
#===========================================================================

#=============== Material model parameters =================================
material.model = isotropic
material.isotropic.lambda = 497.0
material.isotropic.mu = 331.0
#===========================================================================

#=============== Damage evolution parameters ===============================
damage.anisotropy = 0
damage.type = relaxation
damage.d_final = 0.999
damage.number_of_terms = 2
damage.d_i = 0.75 0.249
damage.tau_i = 24 96
damage.t_start_i = 0 30
damage.ic_type = constant
damage.ic.value = 0.0
damage.bc.lo = EXT_DIR EXT_DIR EXT_DIR
damage.bc.hi = EXT_DIR EXT_DIR EXT_DIR
damage.bc.lo_1 = 0.0
damage.bc.hi_1 = 0.0
damage.bc.lo_2 = 0.0
damage.bc.hi_2 = 0.0
damage.bc.lo_3 = 0.0
damage.bc.hi_3 = 0.0
#===========================================================================

#=============== Elasticity parameters =====================================
elastic.on = true
elastic.bottom_solver = bicgstab
elastic.int = 100
elastic.composite_solve	= 1
elastic.verbose			= 2
elastic.cg_verbose 		= 2
elastic.max_iter		= 10000
elastic.max_fmg_iter 	= 10000 
elastic.bottom_max_iter = 10000
elastic.linop_maxorder 	= 2
elastic.max_coarsening_level = 0
elastic.agglomeration 	= 0
elastic.consolidation 	= 0
elastic.tol_rel			=  1.0e-6
elastic.tol_abs			=  1.0e-6
elastic.tstart 			= 0.0
elastic.tend			= 100.0
elastic.use_fsmooth = 0

elastic.body_force     = 0.0 -0.00001 0.0

elastic.bc.bc_x_lo = disp disp disp
#elastic.bc.bc_x_lo = trac trac trac
#elastic.bc.bc_y_lo = disp disp disp
elastic.bc.bc_y_lo = trac trac trac
#elastic.bc.bc_z_lo = disp disp disp
elastic.bc.bc_z_lo = trac trac trac
elastic.bc.bc_x_hi = disp disp disp
#elastic.bc.bc_x_hi = trac trac trac
#elastic.bc.bc_y_hi = disp disp disp
elastic.bc.bc_y_hi = trac trac trac
#elastic.bc.bc_z_hi = disp disp disp
elastic.bc.bc_z_hi = trac trac trac

elastic.bc.left_face = 0.0 0.0 0.0
elastic.bc.right_face = 1.0 0.0 0.0
elastic.bc.bottom_face = 0.0 0.0 0.0
elastic.bc.top_face = 0.0 0.0 0.0
elastic.bc.back_face = 0.0 0.0 0.0
elastic.bc.front_face = 0.0 0.0 0.0
#===========================================================================
