eta.ic.expression.constant.vel_x = 0.0 
eta.ic.expression.constant.vel_y = 0.0 
eta.ic.expression.region0        = "(0.5 + 0.5*tanh(x/eps))"

### HYDRO PARAM ###

gamma = 1.4
