
plot_file     = output

# Simulation length
timestep = 0.0001
stop_time = 0.05

# AMR parameters
amr.plot_int = 10
amr.max_level = 3
amr.n_cell = 8 8 8
amr.blocking_factor = 1
amr.regrid_int = 10
amr.grid_eff = 1.0

# Specify geometry and unrefined mesh
geometry.prob_lo = 0 0 0
geometry.prob_hi = 1 1 1
geometry.is_periodic= 0 0 0

# Criterion for mesh refinement
heat.alpha = 1.0
heat.refinement_threshold = 0.01

# Specify initial conditions
shock.xpos = 0.5
shock.ypos = 0.0
shock.zpos = 0.0

# Q Vector = [Density, Uvelocity, VVelocity, WVelocity, IE]
qvec.ic.type = sodshock
qvec.ic.sodshock.left.density = 0.5
qvec.ic.sodshock.right.density = 0.5
qvec.ic.sodshock.left.uvelocity = 0.5
qvec.ic.sodshock.right.uvelocity = 0.5
qvec.ic.sodshock.left.vvelocity = 0.5
qvec.ic.sodshock.right.vvelocity = 0.5
qvec.ic.sodshock.left.wvelocity = 0.5
qvec.ic.sodshock.right.wvelocity = 0.5

#Pressure
pressure.ic.type = sodshock
pressure.ic.sodshock.left = 0.5
pressure.ic.sodshock.right = 0.5


# Boundary conditions
qvec.bc.type.xhi = dirichlet
qvec.bc.type.xlo = dirichlet
qvec.bc.type.yhi = dirichlet
qvec.bc.type.ylo = dirichlet
qvec.bc.type.zhi = dirichlet
qvec.bc.type.zlo = dirichlet

qvec.bc.val.xhi  = 0.0
qvec.bc.val.xlo  = 1.0
qvec.bc.val.yhi  = 0.0
qvec.bc.val.ylo  = 1.0
qvec.bc.val.zhi  = 0.0
qvec.bc.val.zlo  = 1.0


pressure.bc.type.xhi = dirichlet
pressure.bc.type.xlo = dirichlet
pressure.bc.type.yhi = dirichlet
pressure.bc.type.ylo = dirichlet
pressure.bc.type.zhi = dirichlet
pressure.bc.type.zlo = dirichlet

pressure.bc.val.xhi  = 0.0
pressure.bc.val.xlo  = 1.0
pressure.bc.val.yhi  = 0.0
pressure.bc.val.ylo  = 1.0
pressure.bc.val.zhi  = 0.0
pressure.bc.val.zlo  = 1.0


