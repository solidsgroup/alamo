plot_file     = output

# Simulation length
timestep = 0.0001
stop_time = 0.0005

# AMR parameters
amr.plot_int = 10
amr.max_level = 1
amr.n_cell = 24 24 24
amr.blocking_factor = 1
amr.regrid_int = 10
amr.grid_eff = 1.0

# Specify geometry and unrefined mesh
geometry.prob_lo = 0 0 0
geometry.prob_hi = 1 1 1
geometry.is_periodic= 0 0 0

# Specify initial conditions
ls.ic.type = spherels
ls.ic.spherels.center = 0.5 0.5 0.5
ls.ic.spherels.radius = 0.25
ls.ic.spherels.type   = "xyz"

# Specify initial conditions for level set velocity
lsvel.ic.type = constant constant constant
lsvel.ic.constant = 0.1 0.0 0.0

# Specify Boundary condition for levelset field
ls.bc.type.xhi = neumann
ls.bc.type.xlo = neumann
ls.bc.type.yhi = neumann
ls.bc.type.ylo = neumann
ls.bc.type.zhi = neumann
ls.bc.type.zlo = neumann
ls.bc.constant.val.xhi  = 0.0
ls.bc.constant.val.xlo  = 0.0
ls.bc.constant.val.yhi  = 0.0
ls.bc.constant.val.ylo  = 0.0
ls.bc.constant.val.zhi  = 0.0
ls.bc.constant.val.zlo  = 0.0

# Boundary conditions for level set velocity
lsvel.bc.type = constant constant constant
lsvel.bc.val = 0.0 0.0 0.0

